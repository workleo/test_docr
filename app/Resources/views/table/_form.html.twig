{% if show_confirmation|default(false) %}
    {% set attr = {'data-confirmation': 'true'} %}
    {{ include('blog/_delete_product_confirmation.html.twig') }}
{% endif %}

{{ form_start(form, {attr: attr|default({})}) }}

<div class="row">
    {{ form_label(form.name) }}
    <div>
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>


    {{ form_label(form.price) }}
    <div>
        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
    </div>


    {{ form_label(form.description) }}
    <div>
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>


    {{ form_label(form.tags) }}
     <div>
         {{ form_widget(form.tags, {'attr': {'class': 'form-control'}}) }}
     </div>

</div>

<div class="row">
    <button type="submit" class="{{ button_css|default("btn btn-primary") }}">
        <i class="fa fa-save" aria-hidden="true"></i> SAVE
    </button>

    {% if include_back_to_home_link|default(false) %}
        <a href="{{ path('product_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> BACK TO LIST
        </a>
    {% endif %}
</div>

{{ form_end(form) }}
