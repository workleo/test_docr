{% extends 'base.html.twig' %}

{% block body_id 'product_index' %}

{% block main %}
    <h1></h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col" class="text-center">Description</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>
                    <a href="{{ path('comments_edit', {id: product.id}) }}"  title="Comments">
                        {{ product.name }}
                    </a>
                </td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('product_show', {id: product.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> Show
                        </a>
                        <a href="{{ path('product_edit', {id: product.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> Edit
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Products were not found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('product_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> Create Product
        </a>
    </div>
    {{ parent() }}
{% endblock %}
