{% extends 'base.html.twig' %}

{% block body_id 'product_new' %}

{% block main %}
    <h1>Product creation</h1>

    {{ form_start(form) }}
    <div>
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>


    {{ form_label(form.price) }}
    <div>
        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
    </div>


    {{ form_label(form.description) }}
    <div>
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    {# {{ form_row(form.content) }} #}
    {# {{ form_row(form.publishedAt) }} #}
    {# {{ form_row(form.tags) }} #}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> Create product
    </button>
    {{ form_widget(form.saveAndCreateNew, {label: 'Save and create new', attr: {class: 'btn btn-primary'}}) }}
    <a href="{{ path('product_index') }}" class="btn btn-link">
        <i class="fa fa-list-alt" aria-hidden="true"></i> Back to the product list
    </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
